.search-box {
  background-color: #fe2c4b;
  padding: 20rpx;
  position: relative;
}
.search-box input {
  background-color: white;
  padding-left: 50%;
  border-radius: 10rpx;
  transition: 0.3s;
}
.search-box icon {
  position: absolute;
  top: 25rpx;
  left: 42%;
  transition: 0.3s;
}
.search-box.focus input {
  padding-left: 60rpx;
}
.search-box.focus icon {
  left: 4%;
}

