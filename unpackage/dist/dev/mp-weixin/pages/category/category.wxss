.category-container {
  position: relative;
  height: 100vh;
}
.category-container .bottom {
  top: 85rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
}
.category-container .bottom .left {
  width: 200rpx;
}
.category-container .bottom .left .item {
  background-color: #f4f4f4;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.category-container .bottom .left .item.active {
  background-color: white;
  color: #fe2c4b;
  position: relative;
}
.category-container .bottom .left .item.active::before {
  content: '';
  position: absolute;
  left: 0;
  height: 60rpx;
  top: 20rpx;
  background-color: #fe2c4b;
  width: 10rpx;
}
.category-container .bottom .right {
  flex: 1;
  padding: 20rpx 16rpx;
}
.category-container .bottom .right .banner {
  width: 520rpx;
  height: 180rpx;
}
.category-container .bottom .right .pro-section {
  margin-top: 35rpx;
}
.category-container .bottom .right .pro-section .title {
  text-align: center;
  color: #dadada;
}
.category-container .bottom .right .pro-section .title text {
  color: black;
  margin: 0 35rpx;
}
.category-container .bottom .right .pro-items {
  display: flex;
  flex-wrap: wrap;
}
.category-container .bottom .right .pro-items .item {
  width: 33.333333%;
  text-align: center;
  font-size: 25rpx;
}
.category-container .bottom .right .pro-items .item image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 0  auto;
}

