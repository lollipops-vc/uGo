.wrapper {
  background-color: #f4f4f4;
  padding-bottom: 98rpx;
}
.swiper {
  height: 720rpx;
}
.attr-box {
  padding: 10rpx;
}
.attr-box .tr {
  border: 1rpx solid #d1d1d1;
  display: flex;
}
.attr-box .tr .td {
  flex: 1;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 24rpx;
}
.attr-box .tr .td:first-child {
  border-right: 1rpx solid #d1d1d1;
}
.swiper-img {
  width: 100%;
  height: 720rpx;
}
.goods-info {
  padding: 40rpx 0 30rpx 20rpx;
  background-color: #fff;
}
.goods-info .price {
  color: #eb4450;
  font-size: 40rpx;
}
.goods-info .name-favo {
  display: flex;
  height: 78rpx;
  margin-top: 14rpx;
}
.goods-info .name-favo .name {
  color: #333;
  flex: 1;
  font-size: 28rpx;
  padding-right: 78rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-info .name-favo .favo {
  border-left: 1px solid #ddd;
  width: 144rpx;
  color: #999;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.goods-info .express {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.promote {
  margin-top: 20rpx;
}
.promote view {
  background-color: #fff;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
}
.promote view.brother {
  margin-top: 0;
}
.promote view .name {
  color: #404040;
}
.promote view .detail {
  color: #ff4055;
  margin-left: 40rpx;
}
.promote view .detail.gray {
  color: #dfdfdf;
}
.goods-detail {
  margin-top: 20rpx;
  background-color: #fff;
}
.goods-detail .tabs {
  display: flex;
}
.goods-detail .tabs text {
  flex: 1;
  text-align: center;
  color: #404040;
  font-size: 22rpx;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}
.goods-detail .tabs text.active {
  color: #ff4055;
  border-bottom: 10rpx solid #ff2644;
}
.fixed-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 98rpx;
  display: flex;
  background-color: #fff;
}
.fixed-bottom .icon-text {
  flex: 2;
  font-size: 20rpx;
  color: #404040;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.fixed-bottom .btn {
  flex: 3;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
}
.fixed-bottom .btn.add-cart-btn {
  background-color: #ffb400;
}
.fixed-bottom .btn.buy-btn {
  background-color: #ff2d4a;
}

