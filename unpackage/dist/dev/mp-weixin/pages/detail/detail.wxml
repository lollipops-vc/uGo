<view class="wrapper"><swiper class="swiper" indicator-dots="{{true}}" autoplay="{{true}}" circular="{{true}}" indicator-color="#ccc" indicator-active-color="#fff"><block wx:for="{{detail.pics}}" wx:for-item="item" wx:for-index="index" wx:key="goods_id"><swiper-item><image class="swiper-img" src="{{item.pics_mid}}" data-event-opts="{{[['tap',[['preview',[index]]]]]}}" bindtap="__e"></image></swiper-item></block></swiper><view class="goods-info"><view class="price">{{"￥"+detail.goods_price}}</view><view class="name-favo"><view class="name">{{detail.goods_name}}</view><view class="favo"><text class="iconfont"></text><text>分享</text></view></view><view class="express">快递: 免运费</view></view><view class="promote"><view><text class="name">促销</text><text class="detail">满300减30元</text></view><view class="brother"><text class="name">已选</text><text class="detail gray">黑色/S/1件</text></view></view><view class="goods-detail"><view class="tabs"><text data-event-opts="{{[['tap',[['changeTab',[0]]]]]}}" class="{{[(tabIndex===0)?'active':'']}}" bindtap="__e">图文介绍</text><text data-event-opts="{{[['tap',[['changeTab',[1]]]]]}}" class="{{[(tabIndex===1)?'active':'']}}" bindtap="__e">规格参数</text></view><view class="main"><view hidden="{{!(tabIndex===0)}}"><rich-text nodes="{{detail.goods_introduce}}"></rich-text></view><view hidden="{{!(tabIndex===1)}}"><view class="attr-box"><block wx:for="{{detail.attrs}}" wx:for-item="item" wx:for-index="__i0__" wx:key="attr_id"><view class="tr"><view class="td">{{''+item.attr_name+''}}</view><view class="td">{{''+item.attr_value+''}}</view></view></block></view></view></view></view><view class="fixed-bottom"><view class="icon-text"><text class="iconfont icon-kefu"></text><text>联系客服</text></view><view data-event-opts="{{[['tap',[['toCart',['$event']]]]]}}" class="icon-text" bindtap="__e"><text class="iconfont icon-cart"></text><text>购物车</text></view><view data-event-opts="{{[['tap',[['addTocart',['$event']]]]]}}" class="btn add-cart-btn" bindtap="__e">加入购物车</view><view class="btn buy-btn">立即购买</view></view></view>